{
  "name": "node-starter-kit",
  "version": "1.0.0",
  "description": "An opinionated boilerplate for your node module projects",
  "main": "index.js",
  "repository": "https://github.com/nielse63/node-starter-kit",
  "author": {
    "name": "Erik Nielsen",
    "email": "erik@312development.com",
    "url": "https://312development.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/nielse63/node-starter-kit",
  "keywords": [],
  "bugs": "https://github.com/nielse63/node-starter-kit/issues",
  "scripts": {
    "lint": "eslint . --fix",
    "test": "jest",
    "generate-template": "rm -rf tmp/ && hygen blueprint new --name 'project name' --description 'This is the best project in the world!' --directory tmp/project-name --authorName 'Some User' --authorEmail test@test.com --gitConfigName 'Some User' --gitConfigEmail test@test.com --githubUserName github.user"
  },
  "engines": {
    "node": ">= 10.x",
    "npm": ">= 6.x",
    "yarn": ">= 1.x"
  },
  "dependencies": {
    "case": "^1.5.5",
    "commander": "^2.18.0",
    "hygen": "^1.6.2"
  },
  "devDependencies": {
    "eslint": "^5.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-unicorn": "^6.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "markdownlint-cli": "^0.13.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "scripts/pre-commit"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    ".eslintrc.js": [
      "eslint --ignore-pattern='!.eslintrc.js' --fix",
      "git add"
    ],
    "*.md": [
      "markdownlint"
    ]
  }
}
